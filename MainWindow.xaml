<Window x:Class="DicomSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DicomSync - Editor e Envio" 
        Height="908" Width="950"
        
        WindowState="Normal" 
        WindowStartupLocation="CenterScreen"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" CornerRadius="0" GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#007ACC"/>
        <SolidColorBrush x:Key="PrimaryDarkColor" Color="#005A9E"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>

        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E5E5E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#B0B0B0"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="Background" Value="#FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" Opacity="0.05" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryDarkColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#004080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border x:Name="MainBorder" Background="{StaticResource BackgroundColor}" CornerRadius="8" BorderBrush="#007ACC" BorderThickness="1" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="0" BlurRadius="15" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="White" MouseLeftButtonDown="TitleBar_MouseDown">
                <Border CornerRadius="8,8,0,0" Background="White"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                    <TextBlock Text="DICOM SYNC" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" FontSize="14"/>
                    <TextBlock Text=" - Editor e Envio" Foreground="#888" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="12"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button Content="—" Style="{StaticResource WindowButtonStyle}" Click="btnMinimize_Click"/>
                    <Button x:Name="btnMaximize" Content="⬜" FontSize="10" Style="{StaticResource WindowButtonStyle}" Click="btnMaximize_Click"/>
                    <Button Content="✕" Style="{StaticResource CloseButtonStyle}" Click="btnClose_Click"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="20,20,20,10">
                    <Border Style="{StaticResource CardStyle}" Padding="15" Margin="0,0,0,20">
                        <TextBlock FontSize="28" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Center">
                            <Run Text="DICOM "/><Run Text="SYNC" Foreground="#333333"/>
                        </TextBlock>
                    </Border>

                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <Label Content="AE Title Local"/>
                                <TextBox x:Name="txtAeLocal" Text="DICOMSYNC"/>
                                <Label Content="IP do PACS"/>
                                <TextBox x:Name="txtIpRemote" Text="127.0.0.1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <Label Content="AE Title PACS"/>
                                <TextBox x:Name="txtAeRemote" Text="PACSSERVER"/>
                                <Label Content="Porta"/>
                                <TextBox x:Name="txtPortRemote" Text="104"/>
                            </StackPanel>

                            <Button x:Name="btnEcho" Grid.Column="4" VerticalAlignment="Bottom" Click="btnEcho_Click" ToolTip="Testar Conexão (C-ECHO)" Width="40" Height="35" Cursor="Hand" Background="#E0E0E0" BorderBrush="#CCC" BorderThickness="1">
                                <Button.Content>
                                    <TextBlock Text="📶" FontSize="16" Foreground="#333"/>
                                </Button.Content>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>

                <Border Style="{StaticResource CardStyle}" Margin="20,311,20,20" Padding="0" Grid.RowSpan="2">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Gerenciador do Estudo" Style="{StaticResource SectionTitle}" Margin="10,10,0,10"/>

                        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
                            <TabItem Header=" 👤 Dados do Paciente " FontSize="14">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F9F9F9" Margin="0,10,0,0">
                                    <StackPanel Margin="10">
                                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15" Padding="15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="Detalhes do Arquivo" VerticalAlignment="Center" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                                                <Button x:Name="btnEditData" Content="DATAMAKER" Grid.Column="1" Width="120" Height="35" Background="#9C27B0" Foreground="White" FontWeight="Bold" Click="btnEditData_Click" Cursor="Hand">
                                                    <Button.Resources>
                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="6"/>
                                                        </Style>
                                                    </Button.Resources>
                                                </Button>
                                            </Grid>
                                        </Border>
                                        <Border Style="{StaticResource CardStyle}" Padding="20">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <Label Content="Nome do Paciente"/>
                                                    <TextBox x:Name="txtPatientName" IsReadOnly="True" Background="#F5F5F5" Foreground="#333"/>
                                                    <Label Content="Prontuário (ID)"/>
                                                    <TextBox x:Name="txtPatientID" IsReadOnly="True" Background="#F5F5F5" Foreground="#333"/>
                                                    <Label Content="Accession Number"/>
                                                    <TextBox x:Name="txtAccessionNumber" IsReadOnly="True" Background="#F5F5F5" Foreground="#333"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="2">
                                                    <Label Content="Data de Nascimento"/>
                                                    <TextBox x:Name="txtBirthDate" TextChanged="DateTextBox_TextChanged" MaxLength="10" IsReadOnly="True" Background="#F5F5F5" Foreground="#333"/>
                                                    <Label Content="Data do Estudo"/>
                                                    <TextBox x:Name="txtStudyDate" IsReadOnly="True" TextChanged="DateTextBox_TextChanged" MaxLength="10" Background="#F5F5F5" Foreground="#333"/>
                                                    <Label Content="Descrição do Estudo"/>
                                                    <TextBox x:Name="txtStudyDescription" IsReadOnly="True" Background="#F5F5F5" Foreground="#333"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>

                            <TabItem Header=" 📷 Imagens " FontSize="14">
                                <Grid x:Name="___Sem_Nome_" Background="#F9F9F9" Margin="0,10,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="10,10,10,5" Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="Diretório DICOM (DICOM DIR)" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox x:Name="txtFolderPath" Grid.Column="0" IsReadOnly="True" Text="Nenhuma pasta selecionada" VerticalContentAlignment="Center" Background="#F5F5F5" Foreground="#555" Margin="0,0,10,0"/>
                                                <Button x:Name="btnSelectFolder" Grid.Column="1" Content="📂 Importar Estudo" Click="btnSelectFolder_Click" Width="140" Height="35" Background="#9C27B0" Foreground="White" FontWeight="Bold" Margin="0,0,10,0" Cursor="Hand"/>
                                                <Button x:Name="btnLoadImages" Grid.Column="2" Content="🔍 Localizar" Click="btnLoadImages_Click" Width="100" Height="35" Background="#7B1FA2" Foreground="White" FontWeight="Bold" IsEnabled="False" Cursor="Hand"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <Grid Grid.Row="1" Margin="15,0,15,5">
                                        <TextBlock x:Name="lblStatusImages" Text="Aguardando ação..." Foreground="Gray" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        <ProgressBar x:Name="pbImagesLoading" Width="412" Height="15" HorizontalAlignment="Right" VerticalAlignment="Center" Minimum="0" Maximum="100" Value="0" Visibility="Collapsed"/>
                                    </Grid>

                                    <TabControl Grid.Row="2" Margin="10,0,10,10" Background="Transparent" BorderThickness="0">
                                        <TabItem Header="Todas as Imagens">
                                            <Border Background="White" BorderBrush="#EEEEEE" BorderThickness="1" CornerRadius="4">
                                                <ListBox x:Name="lstImages" BorderThickness="0" SelectionMode="Extended">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal" Margin="2">
                                                                <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                                <TextBlock Text="{Binding FullPath}" FontSize="11" FontFamily="Consolas" Foreground="#333" VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </Border>
                                        </TabItem>
                                        <TabItem Header="Agrupar por Séries">
                                            <Border Background="White" BorderBrush="#EEEEEE" BorderThickness="1" CornerRadius="4">
                                                <ListBox x:Name="lstSeries" BorderThickness="0" SelectionMode="Extended">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Margin="5">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                                    <TextBlock Text="{Binding SeriesDescription}" FontWeight="Bold" Foreground="#007ACC"/>
                                                                    <TextBlock Text=" | " Foreground="Gray"/>
                                                                    <TextBlock Text="{Binding SeriesUID}" FontSize="10" Foreground="Gray" VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                                <TextBlock Text="{Binding ImageCountInfo}" FontSize="11" Margin="25,2,0,0" Foreground="#555"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </Border>
                                        </TabItem>
                                    </TabControl>

                                    <UniformGrid Grid.Row="3" Columns="2" Margin="10,0,10,10">
                                        <Border Background="#E8F5E9" BorderBrush="#4CAF50" BorderThickness="1" CornerRadius="6" Padding="10,8" Margin="5,0">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="✅ SUCESSO: " Foreground="#2E7D32" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock x:Name="lblSucessoCount" Text="0" Foreground="#2E7D32" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text=" / " Foreground="#2E7D32" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock x:Name="lblTotalSucesso" Text="0" Foreground="#2E7D32" FontWeight="Bold" FontSize="14"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#FFEBEE" BorderBrush="#F44336" BorderThickness="1" CornerRadius="6" Padding="10,8" Margin="5,0">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="❌ FALHA: " Foreground="#C62828" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock x:Name="lblErroCount" Text="0" Foreground="#C62828" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text=" / " Foreground="#C62828" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock x:Name="lblTotalErro" Text="0" Foreground="#C62828" FontWeight="Bold" FontSize="14"/>
                                            </StackPanel>
                                        </Border>
                                    </UniformGrid>

                                    <Button Grid.Row="4" x:Name="btnSend" Content="ENVIAR SELECIONADOS PARA O PACS" Style="{StaticResource PrimaryButton}" Click="btnSend_Click" Margin="10,0,10,15"/>
                                </Grid>
                            </TabItem>
                            <TabItem Header="⚠️ Logs de Erro">
                                <Border Background="White" BorderBrush="#EEEEEE" BorderThickness="1" CornerRadius="4">
                                    <ListBox x:Name="lstErrorLogs" BorderThickness="0" HorizontalContentAlignment="Stretch">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#FFF5F5" BorderBrush="#FFCDD2" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,5">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Text="⚠️" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Description}" FontWeight="Bold" Foreground="#B71C1C" FontSize="13"/>
                                                            <TextBlock Text="{Binding ProbableCause}" Foreground="#333" FontSize="12" Margin="0,2,0,5" TextWrapping="Wrap"/>

                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="ID Técnico: " FontSize="10" Foreground="Gray"/>
                                                                <TextBlock Text="{Binding ErrorCode}" FontSize="10" Foreground="Gray" Margin="0,0,10,0"/>
                                                                <TextBlock Text="UID: " FontSize="10" Foreground="Gray"/>
                                                                <TextBlock Text="{Binding InstanceUID}" FontSize="10" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="2" Background="#E0E0E0" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0" CornerRadius="0,0,8,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="txtStatus" Text="Pronto" VerticalAlignment="Center" Margin="10,0" Foreground="#555"/>
                    <TextBlock Grid.Column="1" Text="v1.1" VerticalAlignment="Center" Margin="10,0" Foreground="#888" FontSize="10"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>